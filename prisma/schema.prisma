generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Program {
  ALL
  TITP
  SSW
  TA
}

enum OrgType {
  SUPERVISOR
  SUPPORT
  SENDING
  TRAINING
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum CaseStatus {
  DRAFT
  IN_REVIEW
  SUBMITTED
  COMPLETED
}

enum DocumentType {
  JOB_OFFER_PDF
  OTHER
}

enum AlertSeverity {
  INFO
  WARN
  CRITICAL
}

model Tenant {
  id      String   @id @default(cuid())
  name    String
  code    String   @unique
  users   User[]
  orgs    Organization[]
  companies Company[]
  persons Person[]
  statusHistories PersonStatusHistory[]
  jobs    Job[]
  cases   Case[]
  tasks   Task[]
  documents Document[]
  logs    Log[]
  alerts  Alert[]
  schedules ScheduleEvent[]
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  name       String?
  password   String
  tenant     Tenant   @relation(fields: [tenantId], references: [id])
  tenantId   String
  org        Organization? @relation(fields: [orgId], references: [id])
  orgId      String?
  cases      Case[]   @relation("UserCases")
  logs       Log[]
  documents  Document[]
  sessions   Session[]
  accounts   Account[]
}

model Organization {
  id       String   @id @default(cuid())
  name     String
  orgType  OrgType
  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  tenantId String
  companies Company[]
  jobs     Job[]
  users    User[]
}

model Company {
  id       String   @id @default(cuid())
  name     String
  location String?
  defaultOrgId String?
  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  tenantId String
  org      Organization? @relation(fields: [defaultOrgId], references: [id])
  persons  Person[]
  jobs     Job[]
  cases    Case[]
}

model Person {
  id       String   @id @default(cuid())
  fullName String
  nationality String?
  program  Program?
  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  tenantId String
  company  Company? @relation(fields: [companyId], references: [id])
  companyId String?
  statusHistory PersonStatusHistory[]
  cases    Case[]
  documents Document[]
}

model PersonStatusHistory {
  id        String   @id @default(cuid())
  person    Person   @relation(fields: [personId], references: [id])
  personId  String
  status    String
  program   Program?
  effectiveDate DateTime
  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  tenantId String
}

model Job {
  id       String   @id @default(cuid())
  title    String
  program  Program
  status   String   @default("open")
  company  Company? @relation(fields: [companyId], references: [id])
  companyId String?
  assignedOrgId String?
  assignedOrg Organization? @relation(fields: [assignedOrgId], references: [id])
  jobOfferVersion Int @default(0)
  latestJobOfferDocId String?
  documents Document[]
  cases    Case[]
  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  tenantId String
}

model Case {
  id       String   @id @default(cuid())
  title    String
  program  Program
  caseType String
  status   CaseStatus @default(DRAFT)
  company  Company? @relation(fields: [companyId], references: [id])
  companyId String?
  person   Person? @relation(fields: [personId], references: [id])
  personId String?
  job      Job? @relation(fields: [jobId], references: [id])
  jobId    String?
  owner    User? @relation("UserCases", fields: [ownerId], references: [id])
  ownerId  String?
  tasks    Task[]
  documents Document[]
  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  tenantId String
}

model Task {
  id       String   @id @default(cuid())
  title    String
  dueDate  DateTime?
  status   TaskStatus @default(TODO)
  ruleSnapshot Json?
  case     Case? @relation(fields: [caseId], references: [id])
  caseId   String?
  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  tenantId String
}

model Document {
  id       String   @id @default(cuid())
  title    String
  docType  DocumentType
  url      String
  version  Int @default(1)
  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  tenantId String
  case     Case? @relation(fields: [caseId], references: [id])
  caseId   String?
  job      Job? @relation(fields: [jobId], references: [id])
  jobId    String?
  person   Person? @relation(fields: [personId], references: [id])
  personId String?
  createdBy User? @relation(fields: [createdById], references: [id])
  createdById String?
}

model Log {
  id       String   @id @default(cuid())
  entityType String
  entityId String
  message  String
  createdAt DateTime @default(now())
  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  tenantId String
  user     User? @relation(fields: [userId], references: [id])
  userId   String?
}

model Alert {
  id       String   @id @default(cuid())
  title    String
  severity AlertSeverity
  status   String @default("open")
  entityType String?
  entityId String?
  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  tenantId String
}

model ScheduleEvent {
  id       String   @id @default(cuid())
  title    String
  startDate DateTime
  endDate   DateTime
  program   Program
  entityType String?
  entityId String?
  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  tenantId String
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
